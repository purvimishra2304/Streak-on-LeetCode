# USING MAX HEAP
import heapq
class Solution(object):
    def topKFrequent(self, nums, k):
        hashmap = {}
        for num in nums:
            hashmap[num] = hashmap.get(num, 0) + 1

        array = []
        for key, value in hashmap.items():
            array.append((-value, key))  # use negative frequency for max-heap

        heapq.heapify(array)

        result = []
        for i in range(k):
            node = heapq.heappop(array)
            result.append(node[1])
        return result
